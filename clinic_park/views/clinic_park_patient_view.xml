<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!-- Vista Tree de Pacientes -->
    <record id="view_clinic_park_patient_tree" model="ir.ui.view">
        <field name="name">clinic.park.patient.tree</field>
        <field name="model">clinic.park.patient</field>
        <field name="arch" type="xml">
            <tree string="Pacientes">
                <field name="name"/>
                <field name="dni"/>
                <field name="age"/>
                <field name="phone"/>
                <field name="current_date"/>
            </tree>
        </field>
    </record>

    <!-- Vista Formulario de Paciente -->
    <record id="view_clinic_park_patient_form" model="ir.ui.view">
        <field name="name">clinic.park.patient.form</field>
        <field name="model">clinic.park.patient</field>
        <field name="arch" type="xml">
            <form string="Paciente">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="dni"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="address"/>
                        <field name="birth_date"/>
                        <field name="reason"/>
                    </group>
                    <group string="AcompaÃ±ante">
                        <field name="companion"/>
                        <field name="companion_phone"/>
                    </group>
                    <notebook>
                        <page string="Triage del Paciente">
                            <field name="triage_ids">
                                <tree editable="bottom">
                                    <field name="current_date"/>
                                    <field name="atencion"/>
                                    <field name="temperatura"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>