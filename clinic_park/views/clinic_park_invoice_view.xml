<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="clinic_park_invoice_form_view" model="ir.ui.view">
        <field name="name">clinic.invoice.form</field>
        <field name="model">clinic.invoice</field>
        <field name="arch" type="xml">
            <form string="Alta Clínica con Facturación">
                <header>
                    <button name="action_create_invoice" type="object" string="Generar Factura" class="btn-primary" attrs="{'invisible': [('state','=','invoiced')]}"/>
                    <button name="action_view_invoice" type="object" string="Ver Factura" class="btn-secondary" attrs="{'invisible': [('invoice_id','=',False)]}"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="patient_id"/>
                        <field name="description"/>
                        <field name="total_amount"/>
                        <field name="state" readonly="1"/>
                        <field name="invoice_id" readonly="1"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>
</odoo>