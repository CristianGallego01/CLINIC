<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="view_clinic_park_bill_form" model="ir.ui.view">
        <field name="name">clinic.park.bill.form</field>
        <field name="model">clinic.park.bill</field>
        <field name="arch" type="xml">
            <form string="Alta y Facturación">
                <header>
                    <t t-if="record.state.raw_value == 'draft'">
                        <button name="action_send_to_recovery"
                                string="Enviar a Recuperación"
                                type="object"
                                class="btn-primary"/>
                    </t>
                    <t t-if="record.state.raw_value == 'recovery'">
                        <button name="action_mark_billed"
                                string="Marcar como Facturado"
                                type="object"
                                class="btn-success"/>
                    </t>
                </header>
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="recovery_id"/>
                        <field name="surgery_id"/>
                        <field name="discharge_date"/>
                        <field name="digital_signature" widget="signature"/>
                        <field name="consolidated_items" nolabel="1" readonly="1"/>
                        <field name="state" readonly="1"/>
                        <field name="invoice_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_clinic_park_bill_tree" model="ir.ui.view">
        <field name="name">clinic.park.bill.tree</field>
        <field name="model">clinic.park.bill</field>
        <field name="arch" type="xml">
            <tree string="Altas y Facturación">
                <field name="patient_id"/>
                <field name="discharge_date"/>
                <field name="state"/>
                <field name="invoice_id"/>
            </tree>
        </field>
    </record>

    <record id="action_clinic_park_billing" model="ir.actions.act_window">
        <field name="name">Altas y Facturación</field>
        <field name="res_model">clinic.park.billing</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_clinic_park_billing_root" name="Facturación Clínica" parent="clinic_park.menu_root" sequence="90"/>
    <menuitem id="menu_clinic_park_billing" name="Altas y Facturación" parent="menu_clinic_park_billing_root" action="action_clinic_park_billing"/>
</odoo>
