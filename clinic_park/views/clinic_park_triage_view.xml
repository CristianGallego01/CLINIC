<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!-- FORM VIEW -->
    <record id="clinic_park_triage_form_view" model="ir.ui.view">
        <field name="name">clinic.park.triage.form</field>
        <field name="model">clinic.park.triage</field>
        <field name="arch" type="xml">
            <form string="Triage">
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="current_date"/>
                        <field name="reason"/>
                        <field name="temperatura"/>
                        <field name="pulso"/>
                        <field name="presion"/>
                        <field name="atencion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="clinic_park_triage_tree_view" model="ir.ui.view">
        <field name="name">clinic.park.triage.tree</field>
        <field name="model">clinic.park.triage</field>
        <field name="arch" type="xml">
            <tree string="Triajes">
                <field name="patient_id"/>
                <field name="current_date"/>
                <field name="reason"/>
                <field name="temperatura"/>
                <field name="pulso"/>
                <field name="presion"/>
                <field name="atencion"/>
            </tree>
        </field>
    </record>
</odoo>