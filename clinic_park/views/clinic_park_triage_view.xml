<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="clinic_park_triage_view" model="ir.ui.view">
        <field name="name">clinic.park.triage.view</field>
        <field name="model">clinic.park.triage</field>
        <field name="arch" type="xml">
            <form string="Triage">
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="current_date"/>
                        <field name="reason"/>
                        <field name="temperatura"/>
                        <field name="pulso"/>
                        <field name="presion"/>
                        <field name="frecuencia_respiratoria"/>
                        <field name="atencion"/>
                    </group>
                </sheet>
            </form>
            <tree string="Triajes">
                <field name="patient_id"/>
                <field name="current_date"/>
                <field name="reason"/>
                <field name="temperatura"/>
                <field name="pulso"/>
                <field name="presion"/>
                <field name="atencion"/>
            </tree>
        </field>
    </record>

</odoo>