<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!-- Vista Tree de Triage -->
    <record id="view_clinic_park_triage_tree" model="ir.ui.view">
        <field name="name">clinic.park.triage.tree</field>
        <field name="model">clinic.park.triage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="current_date"/>
                <field name="atencion"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form de Triage -->
    <record id="view_clinic_park_triage_form" model="ir.ui.view">
        <field name="name">clinic.park.triage.form</field>
        <field name="model">clinic.park.triage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="paciente_id"/>
                        <field name="current_date"/>
                        <field name="reason"/>
                        <field name="atencion"/>
                    </group>
                    <group string="Signos Vitales">
                        <field name="temperatura"/>
                        <field name="pulso"/>
                        <field name="presion"/>
                        <field name="frecuencia_respiratoria"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Kanban de Triage -->
    <record id="view_clinic_park_triage_kanban" model="ir.ui.view">
        <field name="name">clinic.park.triage.kanban</field>
        <field name="model">clinic.park.triage</field>
        <field name="arch" type="xml">
            <kanban default_group_by="atencion">
                <field name="name"/>
                <field name="atencion"/>
                <field name="current_date"/>
                <field name="reason"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record">
                            <div class="o_kanban_record_title">
                                <strong><field name="name"/></strong> - <field name="current_date"/>
                            </div>
                            <div>
                                <strong>Motivo:</strong> <field name="reason"/>
                            </div>
                            <div>
                                <strong>Edad:</strong> <field name="age"/> |
                                <strong>DNI:</strong> <field name="dni"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>