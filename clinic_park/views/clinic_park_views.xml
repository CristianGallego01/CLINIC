<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Acción -->
    <record id="action_clinic_park_patient" model="ir.actions.act_window">
        <field name="name">Pacientes</field>
        <field name="res_model">clinic.park.patient</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Vista tipo árbol -->
    <record id="view_clinic_park_patient_tree" model="ir.ui.view">
        <field name="name">clinic.park.patient.tree</field>
        <field name="model">clinic.park.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="dni"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <!-- Vista tipo formulario -->
    <record id="view_clinic_park_patient_form" model="ir.ui.view">
        <field name="name">clinic.park.patient.form</field>
        <field name="model">clinic.park.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="current_date"/>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="dni"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="birth_date"/>
                        <field name="address"/>
                        <field name="reason"/>
                    </group>
                    <separator string="Acompañante"/>
                    <group>
                        <field name="companion"/>
                        <field name="companion_phone"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
